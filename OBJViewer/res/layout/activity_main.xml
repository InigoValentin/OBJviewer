<com.seavenois.obj.MainLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_menu" >
	
    <!-- Slider menu -->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_menu"
            android:divider="@drawable/divider"
            android:dividerPadding="25dp"
            android:orientation="vertical"
            android:showDividers="middle" >
            
            <Button
            android:id="@+id/btLoadModel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/menu_open" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ToggleButton
                    android:id="@+id/tgDrawVertizes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_draw_vertizes" />
                
                <ToggleButton
                    android:id="@+id/tgDrawEdges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_draw_edges" />
                
                <ToggleButton
                    android:id="@+id/tgDrawFaces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_draw_faces" />

            </LinearLayout>
            
        </LinearLayout>

    </ScrollView>

	<!-- The visible screen -->

	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<ImageView
		    android:id="@+id/ivCanvas"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@color/dark_gray"
		    android:importantForAccessibility="no"
		    android:src="@drawable/ic_launcher" />
		
	</LinearLayout>

</com.seavenois.obj.MainLayout>
